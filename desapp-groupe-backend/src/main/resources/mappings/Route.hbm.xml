<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
                   default-cascade="save-update">
    <class name="domain.Route">
        <id column="ID" name="id">
            <generator class="native" />
        </id>

        <property name="distanceInKms" />
        <property name="fixedCosts" />

        <list name="schedules" lazy="false">
            <key column="scheduleId" />
            <list-index column="id" />
            <one-to-many class="domain.Schedule" />
        </list>
        <list name="routePoints" lazy="false" cascade="save-update">
            <key column="routePointId" />
            <list-index column="indexInRoute" />
            <one-to-many class="domain.RoutePoint" />
        </list>

    </class>
</hibernate-mapping>
