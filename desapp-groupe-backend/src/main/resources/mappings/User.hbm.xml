<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
                   default-cascade="save-update">
    <class name="domain.User">
        <id column="ID" name="id">
            <generator class="native" />
        </id>

        <property name="name" />
        <property name="lastName" />
        <property name="userName" />
        <property name="email" />
        <property name="image" />
        <property name="goodRateCount" />
        <property name="badRateCount" />

        <property name="points" />

        <one-to-one name="vehicle" class="domain.Vehicle" />
        <bag name="routes" lazy="false">
            <key column="routeId" />
            <one-to-many class="domain.Route" />
        </bag>

        <list name="chats" lazy="false">
            <key column="chatId" />
            <list-index column="id" />
            <many-to-many class="domain.Chat" />
        </list>


    </class>
</hibernate-mapping>
