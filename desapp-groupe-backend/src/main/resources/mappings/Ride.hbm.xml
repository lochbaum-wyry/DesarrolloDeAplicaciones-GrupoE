<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
                   default-cascade="save-update">
    <class name="domain.Ride">
        <id column="ID" name="id">
            <generator class="native" />
        </id>

        <property name="oilPrice" />
        <one-to-one name="vehicle" class="domain.Vehicle" />
        <property name="date" />
        <many-to-one name="route" class="domain.Route" />
        <many-to-one name="driver" class="domain.User" />
        <property name="cancelled" />

        <list name="takenSeats" lazy="false">
            <key column="takenSeatId" />
            <list-index column="id" />
            <one-to-many class="domain.TakenSeat" />
        </list>


    </class>
</hibernate-mapping>
