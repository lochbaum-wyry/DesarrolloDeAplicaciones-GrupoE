<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
                   default-cascade="save-update">
    <class name="domain.Ride">
        <id column="ID" name="id">
            <generator class="native" />
        </id>

        <property name="oilPrice" />
        <property name="date"  type="org.joda.time.contrib.hibernate.PersistentDateTime" />
        <property name="cancelled" />

        <many-to-one name="vehicle" class="domain.Vehicle" column="vehicleId"/>
        <many-to-one name="route" class="domain.Route" column="routeId"/>
        <many-to-one name="driver" class="domain.User" column="driverId"/>

        <list name="takenSeats" lazy="false" cascade="save-update" >
            <key column="takenSeatId" />
            <list-index column="id" />
            <one-to-many class="domain.TakenSeat" />
        </list>


    </class>
</hibernate-mapping>
