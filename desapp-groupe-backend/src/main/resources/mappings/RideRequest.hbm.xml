<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
                   default-cascade="save-update">
    <class name="domain.RideRequest">

        <id column="ID" name="id">
            <generator class="native" />
        </id>

        <one-to-one name="requester" class="domain.User" />
        <one-to-one name="route" class="domain.Route" />
        <property name="date" type = "org.joda.time.contrib.hibernate.PersistentDateTime"/>
        <property name="dateRequested" type = "org.joda.time.contrib.hibernate.PersistentDateTime"/>
        <one-to-one name="boardingAt" class="domain.RoutePoint" />
        <one-to-one name="getOffAt" class="domain.RoutePoint" />
        <property name="status" />

    </class>
</hibernate-mapping>
